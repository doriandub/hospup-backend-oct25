# === ENVIRONMENT ===
APP_NAME="Hospup Backend API"
APP_VERSION="1.0.0"
APP_ENV="development"  # development | staging | production
DEBUG=false
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR

# === DATABASE ===
# Full PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/hospup"

# OR use individual credentials (for Supabase pooler)
DB_USERNAME="postgres.your_project_id"
DB_PASSWORD="your_database_password"
DB_HOSTNAME="aws-0-eu-west-1.pooler.supabase.com"
DB_PORT=6543
DB_NAME="postgres"

# Database pool configuration
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# === CACHE (REDIS) ===
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0
REDIS_CONNECT_TIMEOUT=5.0

# === SECURITY & AUTH ===
# Generate secure random keys:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET="your-jwt-secret-key-here-minimum-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-key-here-minimum-32-chars"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=20
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# === STORAGE (AWS S3) ===
S3_BUCKET_NAME="hospup-files"
S3_REGION="eu-west-1"
S3_ACCESS_KEY_ID="your-aws-access-key-id"
S3_SECRET_ACCESS_KEY="your-aws-secret-access-key"
S3_ENDPOINT_URL=""  # Optional: for S3-compatible services
STORAGE_PUBLIC_BASE="https://hospup-files.s3.eu-west-1.amazonaws.com"

# === AWS SERVICES ===
AWS_REGION="eu-west-1"
AWS_LAMBDA_FUNCTION_NAME="hospup-video-generator"
AWS_MEDIACONVERT_ENDPOINT="https://your-endpoint.mediaconvert.eu-west-1.amazonaws.com"
AWS_MEDIACONVERT_ROLE_ARN="arn:aws:iam::123456789:role/MediaConvertRole"
AWS_MEDIACONVERT_QUEUE_ARN="arn:aws:mediaconvert:eu-west-1:123456789:queues/Default"

# === AI SERVICES ===
OPENAI_API_KEY="sk-your-openai-api-key"  # Optional: for smart matching

# === CORS & FRONTEND ===
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="https://your-frontend.vercel.app,http://localhost:3000"
ALLOW_VERCEL_DOMAINS=true
COOKIE_DOMAIN=""  # Leave empty for automatic
COOKIE_SECURE=true  # Set to false for local development
COOKIE_SAMESITE="none"  # none | lax | strict

# === MONITORING ===
SENTRY_DSN=""  # Optional: for error tracking
LOG_REQUESTS=false

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

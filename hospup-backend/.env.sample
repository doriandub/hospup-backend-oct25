# Backend Environment Variables Sample
# Configure these in your deployment platform

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis
REDIS_URL=redis://username:password@host:port

# JWT Secrets
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here

# CORS & Cookies
ALLOWED_ORIGINS=https://hospup-frontend.vercel.app
COOKIE_DOMAIN=.hospup.app
COOKIE_SECURE=true

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=20
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# S3 Storage
S3_BUCKET=hospup-assets
S3_REGION=eu-west-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
STORAGE_PUBLIC_BASE=https://cdn.hospup.app

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# App Configuration
APP_ENV=production
LOG_LEVEL=INFO
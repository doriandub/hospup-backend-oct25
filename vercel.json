{
  "framework": "nextjs",
  "buildCommand": "cd hospup-frontend && npm run build",
  "devCommand": "cd hospup-frontend && npm run dev", 
  "installCommand": "cd hospup-frontend && npm install",
  "outputDirectory": "hospup-frontend/.next",
  "cleanUrls": true,
  "trailingSlash": false,
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}